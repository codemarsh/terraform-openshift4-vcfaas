# dhcpd.conf
#
# Sample configuration file for ISC dhcpd
#
subnet cidrhost(element(split("/",machine_cidr),0)) netmask cidrnetmask(element(split("/",machine_cidr),0)) {
  option domain-name-servers  ${lb_ip_address};
  option domain-name "${cluster_domain}";
  option routers element(split("/",machine_cidr),0);
  option broadcast-address cidrhost(element(split("/",machine_cidr),-1));
  default-lease-time 600;
  max-lease-time 7200;
}



%{ for hostname, addr in dhcp_ip_addresses ~}
host ${element(split(".",hostname),0)} {
  hardware ethernet ${mac_prefix}:${element(split(".",addr),3)};
  fixed-address ${addr};
}
%{ endfor ~}
 


